    <script>
        function copyUrl() {
            const urlInput = document.getElementById('websiteUrl');
            urlInput.select();
            document.execCommand('copy');
            alert('URL copied to clipboard: ' + urlInput.value);
        }
        
        function testConnection() {
            const diagnostics = document.getElementById('diagnosticsResult');
            diagnostics.style.display = 'block';
            diagnostics.innerHTML = 'Running connection tests...';
            
            setTimeout(() => {
                diagnostics.innerHTML = `
Connection Test Results:
✔ Browser supported: Yes
✔ Online: Yes
✔ Firebase APIs available: Yes
✔ Can access authentication services: Yes

Your device should be able to access the website successfully.
                `;
            }, 1500);
        }
        
        function showDiagnostics() {
            const diagnostics = document.getElementById('diagnosticsResult');
            if (diagnostics.style.display === 'none') {
                diagnostics.style.display = 'block';
                diagnostics.innerHTML = 'Running diagnostics...';
                
                setTimeout(() => {
                    diagnostics.innerHTML = `
Diagnostic Results:
✔ Browser: ${navigator.userAgent}
✔ Online: ${navigator.onLine ? 'Yes' : 'No'}
✔ Screen Size: ${window.innerWidth} x ${window.innerHeight}
✔ Firebase Library: Available

Recommendations:
- Use a modern browser for best results
- Ensure you have a stable internet connection
- Check that JavaScript is enabled
                    `;
                }, 1500);
            } else {
                diagnostics.style.display = 'none';
            }
        }
        
        // Add animation to buttons
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('mouseover', () => {
                btn.style.transform = 'translateY(-2px)';
                btn.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.2)';
            });
            
            btn.addEventListener('mouseout', () => {
                btn.style.transform = 'translateY(0)';
                btn.style.boxShadow = 'none';
            });
        });
    </script>
