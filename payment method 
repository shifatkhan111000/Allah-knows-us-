    <script>
        // JavaScript for FAQ functionality
        document.addEventListener('DOMContentLoaded', function() {
            const faqItems = document.querySelectorAll('.faq-item');
            
            faqItems.forEach(item => {
                item.addEventListener('click', function() {
                    this.classList.toggle('active');
                });
            });
            
            // Payment method buttons
            const paymentButtons = document.querySelectorAll('.payment-card .btn');
            
            paymentButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const paymentMethod = this.closest('.payment-card').querySelector('h3').textContent;
                    alert(`You selected ${paymentMethod}. This would open the payment processing page.`);
                });
            });
            
            // CTA button
            const ctaButton = document.querySelector('.cta-section .btn');
            
            ctaButton.addEventListener('click', function() {
                alert('Redirecting to coin purchase page...');
            });
        });
    </script>
