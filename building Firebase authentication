    <script>
        // Firebase configuration
        const firebaseConfig = {
            apiKey: "AizrSyBZKEdop3uOprqKAWDIOUctp19 - h4B34",
            authDomain: "allah-knows-us.firebaseapp.com",
            projectId: "allah-knows-us",
            storageBucket: "allah-knows-us.firebasestorage.app",
            messagingSenderId: "739942116421",
            appId: "1731942116421webxclccf3c45398cbcdoc172c"
        };
        
        // DOM elements
        const initFirebaseBtn = document.getElementById('initFirebase');
        const initStatus = document.getElementById('initStatus');
        const registerBtn = document.getElementById('register');
        const loginBtn = document.getElementById('login');
        const authStatus = document.getElementById('authStatus');
        const logoutBtn = document.getElementById('logout');
        const userInfo = document.getElementById('userInfo');
        const noUserInfo = document.getElementById('noUserInfo');
        const userEmail = document.getElementById('userEmail');
        const userId = document.getElementById('userId');
        
        // Initialize Firebase
        let auth = null;
        
        initFirebaseBtn.addEventListener('click', () => {
            try {
                // Initialize Firebase
                firebase.initializeApp(firebaseConfig);
                auth = firebase.auth();
                
                // Set up auth state listener
                auth.onAuthStateChanged(user => {
                    if (user) {
                        userEmail.textContent = user.email;
                        userId.textContent = user.uid;
                        userInfo.classList.remove('hidden');
                        noUserInfo.classList.add('hidden');
                    } else {
                        userInfo.classList.add('hidden');
                        noUserInfo.classList.remove('hidden');
                    }
                });
                
                initStatus.textContent = 'Firebase initialized successfully!';
                initStatus.classList.add('success');
                initStatus.classList.remove('hidden', 'error');
                
                // Enable auth buttons
                registerBtn.disabled = false;
                loginBtn.disabled = false;
                
            } catch (error) {
                initStatus.textContent = `Error: ${error.message}`;
                initStatus.classList.add('error');
                initStatus.classList.remove('hidden', 'success');
            }
        });
        
        // Register function
        registerBtn.addEventListener('click', () => {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                authStatus.textContent = 'Please enter both email and password';
                authStatus.classList.add('error');
                authStatus.classList.remove('hidden', 'success');
                return;
            }
            
            auth.createUserWithEmailAndPassword(email, password)
                .then(userCredential => {
                    authStatus.textContent = 'User registered successfully!';
                    authStatus.classList.add('success');
                    authStatus.classList.remove('hidden', 'error');
                })
                .catch(error => {
                    authStatus.textContent = `Registration error: ${error.message}`;
                    authStatus.classList.add('error');
                    authStatus.classList.remove('hidden', 'success');
                });
        });
        
        // Login function
        loginBtn.addEventListener('click', () => {
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            
            if (!email || !password) {
                authStatus.textContent = 'Please enter both email and password';
                authStatus.classList.add('error');
                authStatus.classList.remove('hidden', 'success');
                return;
            }
            
            auth.signInWithEmailAndPassword(email, password)
                .then(userCredential => {
                    authStatus.textContent = 'Login successful!';
                    authStatus.classList.add('success');
                    authStatus.classList.remove('hidden', 'error');
                })
                .catch(error => {
                    authStatus.textContent = `Login error: ${error.message}`;
                    authStatus.classList.add('error');
                    authStatus.classList.remove('hidden', 'success');
                });
        });
        
        // Logout function
        logoutBtn.addEventListener('click', () => {
            auth.signOut()
                .then(() => {
                    authStatus.textContent = 'User logged out successfully';
                    authStatus.classList.add('success');
                    authStatus.classList.remove('hidden', 'error');
                })
                .catch(error => {
                    authStatus.textContent = `Logout error: ${error.message}`;
                    authStatus.classList.add('error');
                    authStatus.classList.remove('hidden', 'success');
                });
        });
        
        // Initially disable auth buttons until Firebase is initialized
        registerBtn.disabled = true;
        loginBtn.disabled = true;
    </script>
</body>
